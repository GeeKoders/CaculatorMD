<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.deposit.CounterActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="0,1,2,3">

        <TableRow>
            <TextView
                android:id="@+id/calResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="right"
                android:background="#000000"
                android:textColor="@color/calTextColor"
                android:textSize="48sp" />
        </TableRow>



        <TableRow>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/calCancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calFront"
                android:text="C"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size"
                android:onClick="cancel" />
           </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calFront"
                android:text="DEL"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size"
                android:onClick="delete" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/mod"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calFront"
                android:text="%"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calFront"
                android:text="/"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
        </TableRow>

        <TableRow>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="7"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="8"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="9"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/multiplier"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calFront"
                android:text="*"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>

        </TableRow>

        <TableRow>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="4"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="5"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="6"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calFront"
                android:text="-"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />

            </library.RippleView>
        </TableRow>

        <TableRow>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="1"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="2"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="3"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calFront"
                android:text="+"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
           </library.RippleView>
        </TableRow>

        <TableRow>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/num0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:layout_span="2"
                android:background="@color/calBack"
                android:text="0"
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/dot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1sp"
                android:background="@color/calBack"
                android:text="."
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
            <library.RippleView ripple:rv_centered="true">
            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_margin="1sp"
                android:background="@color/calFront"
                android:text="="
                android:textColor="@color/calTextColor"
                android:textSize="@dimen/text_size" />
            </library.RippleView>
        </TableRow>
    </TableLayout>
</LinearLayout>
